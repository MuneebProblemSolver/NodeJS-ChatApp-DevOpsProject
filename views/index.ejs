<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Real-Time Messaging</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <header>
        <h1>Real-Time Messaging App by The Logic Lounge</h1>
        <div class="technologies">
            <img src="https://cdn-icons-png.flaticon.com/128/15380/15380914.png" alt="Node.js" title="Node.js">
            <img src="https://cdn-icons-png.flaticon.com/128/91/91397.png" alt="Express.js" title="Express.js">
            <img src="data:image/png;base64," alt="Socket.io" title="Socket.io">
            <img src="https://cdn-icons-png.flaticon.com/128/9559/9559438.png" alt="EJS" title="EJS">
            <img src="https://cdn-icons-png.flaticon.com/128/5969/5969028.png" alt="Docker" title="Docker">
        </div>
    </header>
    <div class="chat-container">
        <div class="messages" id="messages"></div>
        <input type="text" id="message" placeholder="Type your message...">
        <button id="sendBtn">Send</button>
    </div>

    <script src="/socket.io/socket.io.js"></script>
    <script>
        const socket = io();
        const sendBtn = document.getElementById('sendBtn');
        const messageInput = document.getElementById('message');
        const messagesContainer = document.getElementById('messages');

        // Receive messages from server
        socket.on('message', (data) => {
            const { user, message } = data;
            const messageBubble = document.createElement('div');
            messageBubble.classList.add('message-bubble');
            messageBubble.classList.add(user === socket.id ? 'sent' : 'received');
            messageBubble.textContent = message;
            messagesContainer.appendChild(messageBubble);
            messagesContainer.scrollTop = messagesContainer.scrollHeight;
        });

        // Send message to server
        sendBtn.addEventListener('click', () => {
            const message = messageInput.value;
            if (message) {
                socket.emit('user_message', message);
                messageInput.value = '';
            }
        });
    </script>
</body>
</html>
